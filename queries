create table employees(emp_no int primary key,
					  emp_name char(50),
					  emp_dob date,
					  emp_salary int);
insert into employees values(101,'James','2001-june-12',1000);	
insert into employees values(102,'Ricky','1991-july-22',1500,10);	
select * from employees;
insert into employees values(103,'Jack','1995-may-9',3000),(104,'Rockey','1999-january-19',4000);	
select * from employees;
insert into employees values(106,'Henry','15-August-1996',5500),(107,'Richard','12-may-1996',4500);
drop table emplyees;
create table employees(emp_no int not null,
					 emp_name char(15) not null,
					 emp_dob date not null,
					 emp_salary bigint,
					constraint employees_pk primary key(emp_no));
insert into employees values(101,'James','2001-june-12',1000)
							,(103,'Jack','1995-may-9',3000)
							,(104,'Rockey','1999-january-19',4000)
							,(106,'Henry','15-August-1996',5500)
							,(107,'Richard','12-may-1996',4500);	
select * from employees;
alter table employees add column dept_no char(10);
update employees set dept_no=10 where emp_no<105;
update employees set dept_no=20 where emp_no=null;
select * from employees;
update employees set dept_no=20 where emp_no>104;
select * from employees;
select emp_no from employees order by emp_no asc;
   //update the column data
update employees set emp_salary=9800 where emp_no=103;
select * from employees limit  2;
update employees set emp_name='Pank' where emp_name='James';
     //update the column name
alter table employees rename emp_dob to emp_dateOfBirth;
select * from employees;
alter table employees rename emp_dateofbirth to emp_date_of_birth;
create table department(dept_no int not null,
					   dept_name char(20),
					   dept_location char(20),
						constraint department_pk primary key(dept_no));
select * from department;
insert into department values(10,'sales','Nagpur'),(20,'Quality&Assurance','Mumbai');
alter table employees add column emp_job_role char(20);
update employees set emp_job_role='SystemAdministrator' where emp_no=107;
update employees set emp_job_role='SystemAdministrator' where emp_no=101;
alter table employees drop column dept_no;
select * from employees;
 // add the foreign key
 alter table employees add column dept_no int;
 alter table employees add constraint fk_employees foreign key (dept_no) references department(dept_no);
 select * from employees;
 update employees set dept_no=10 where emp_no>105;
 select * from employees;
 update employees set dept_no=10 where emp_no=104;
